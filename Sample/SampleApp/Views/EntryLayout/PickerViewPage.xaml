<?xml version="1.0" encoding="UTF-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Global.InputForms;assembly=Global.InputForms"
             x:Class="SampleApp.Views.PickerViewPage">
    <ContentPage.Content>

        <ScrollView BackgroundColor="WhiteSmoke">
            <StackLayout
            Padding="40,10,40,10"
            HeightRequest="900"
            HorizontalOptions="CenterAndExpand">

            <controls:PickerView
                CornerRadius="15"
                InfoViewType="Surrounded"
                InfoColor="Purple"
                EntryBackgroundColor="#88FFFFFF"
                LabelText="Picker"
                x:Name="_picker"/>


            <controls:DatePickerView
                CornerRadius="15"
                InfoViewType="Surrounded"
                InfoColor="Purple"
                EntryBackgroundColor="#88FFFFFF"
                LabelText="Picker Date"
                x:Name="_pickerDate"/>


            <controls:TimePickerView
                CornerRadius="15"
                InfoViewType="Surrounded"
                InfoColor="Purple"
                EntryBackgroundColor="#88FFFFFF"
                LabelText="Picker Time"
                x:Name="_pickerTime"/>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>